                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Users", users_path %></li>
                  <li><%= link_to "Events", events_path %></li>
                </ul>
              <% end %>
              <li><%#= link_to "Help", help_path %></li>
