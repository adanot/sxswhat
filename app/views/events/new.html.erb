<%= provide(:title, 'New event') %>
<h1>New Event</h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for(@event) do |f| %>
	  <%= render 'shared/event_error_messages' %>

	
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :content %>
	<%= f.text_field :content %>

	<%= f.submit "Create event", class: "btn btn-large btn-primary" %>
  	<% end %>
  </div>
</div>
