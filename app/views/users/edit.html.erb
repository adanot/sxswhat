<%= provide(:title, 'Edit User') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
<div class="row">
<div class="col-md-6">
      <%= f.text_field :first_name, :class=>'form-control',  :placeholder => "First Name" %>
</div>
<div class="col-md-6" style="float:right; overflow:hidden;">
      <%= f.text_field :last_name, :class=>'form-control',  :placeholder => "Last Name" %>
</div>
</div>
<div class="row">
<div class="col-md-12">
      <%= f.text_field :email, :class=>'form-control',  :palceholder => "Email Address" %>
</div>
</div>
      <%= f.password_field :password, :class=>'form-control',  :placeholder => "Password" %>
      <%= f.password_field :password_confirmation, :class=>'form-control',  :placeholder => "Password Confirm" %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
<br>
<div class="col-md-2">
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
</div>
  </div>
</div>
