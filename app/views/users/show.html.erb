<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <h3>
<% if current_user.id == @user.id %>
    Events created by you
<% else %>
    Events created by <%=@user.name %>
<% end %>
  </h3>

  <table class='table'>
    <tr>
      <th>Event Name</th>
      <th>Location</th>
      <th>Date</th>
      <th>Time</th>
      <% if current_user.id == @user.id %>
      <th>Action</th>
      <% end %>
    </tr>
        <% Event.find(:all, :conditions=>['user_id=?',@user.id]).each do |event| %>
          <tr>
            <td><%= link_to event.name, event %></td>
            <td><%= event.location %></td>
	    <td><%= event.date.strftime("%m-%d-%Y") %></td>
            <td><%= event.tstart.strftime('%l:%M %p') %></td>
	    <% if current_user.id == @user.id %>
            <td><%= link_to "Edit", edit_event_path(event), class: 'btn btn-mini btn-success' %> </td>
	    <% end %>
	    <% end %>
          </tr>
      </table>
    </div>
