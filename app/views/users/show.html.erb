<%= provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>	
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
</div>
<div class="row">
				<% Event.find_by_user_id(@user.id).all.each do |event| %> 
					<%= link_to event.name, event %>
				<% end %>
</div>
